(library
    (name skia)
    (public_name skia)
    (cxx_names skia)
    (cxx_flags (:include cxx_flags.sexp))
    (js_of_ocaml (javascript_files ./skia.js))
    (c_library_flags (:include c_library_flags.sexp)))

(rule
    (targets cxx_flags.sexp c_library_flags.sexp)
    (deps (:discover config/discover.exe))
    (action (run %{discover})))
