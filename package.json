{
  "name": "reason-skia",
  "version": "0.1.0",
  "description": "Reason bindings for the Skia 2D graphics library",
  "scripts": {
    "format": "esy dune build @fmt --auto-promote"
  },
  "esy": {
    "build": "dune build -p skia -j4",
    "buildDev": "refmterr dune build --promote-install-files --root . --only-package skia -j4"
  },
  "dependencies": {
    "@opam/ctypes": "^0.15.1",
    "@opam/dune": ">=1.7",
    "@opam/integers": ">=0.3.0",
    "@esy-ocaml/reason": "^3.3.7",
    "esy-freetype2": "^2.9.1007",
    "esy-sdl2": "^2.0.10006",
    "esy-skia": "github:revery-ui/esy-skia#07c13a9",
    "ocaml": ">=4.6.0 <4.11.0",
    "reason-sdl2": "^2.10.3016"
  },
  "devDependencies": {
    "refmterr": "^3.1.0"
  },
  "resolutions": {
    "reason-sdl2": "revery-ui/reason-sdl2#ddefb71",
    "esy-cmake": "prometheansacrifice/esy-cmake#2a47392def"
  }
}
